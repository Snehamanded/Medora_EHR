pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                sh '''
                  echo "ðŸ“¦ Installing Node dependencies..."
                  npm install --production
                '''
            }
        }

        stage('Deploy App') {
            steps {
                sh '''
                  echo "âš™ï¸ Restarting PM2 process..."
                  pm2 describe medora-server > /dev/null
                  if [ $? -ne 0 ]; then
                    echo "ðŸ‘‰ Process not found. Starting..."
                    pm2 start server.js --name medora-server
                  else
                    echo "ðŸ‘‰ Process exists. Restarting..."
                    pm2 restart medora-server
                  fi

                  pm2 save
                '''
            }
        }
    }
}
